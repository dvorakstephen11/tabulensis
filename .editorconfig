root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Allow intentional trailing whitespace for hard line-breaks in Markdown.
trim_trailing_whitespace = false

[*.rs]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

